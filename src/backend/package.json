{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "build:api-functions": "tsc && node_modules/.bin/netlify-lambda build dist",
    "postbuild": "cp ./index.html ./dist/",
    "prestart": "yarn build",
    "watch": "tsc -w",
    "dev": "concurrently --kill-others \"yarn watch\" \"yarn nodemon\"",
    "nodemon": "nodemon -r dotenv/config dist/index.js dotenv_config_path=.env.local",
    "dev:serve": "tsc && node_modules/.bin/netlify-lambda serve dist",
    "dot-env": "node -r dotenv/config dist/index.js dotenv_config_path=.env.local",
    "start": "yarn dot-env && node ."
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.13",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "ioredis": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.3",
    "netlify-lambda": "^2.0.15",
    "serverless-http": "^3.0.2",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  }
}
